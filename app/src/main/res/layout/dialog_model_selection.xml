<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <!-- SiliconFlow Free Service Option Card (Recommended) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSiliconFlowFree"
            style="@style/DialogSelectionCard"
            android:checked="true">

            <LinearLayout
                style="@style/DialogCardContent">

                <TextView
                    style="@style/DialogCardTitle"
                    android:text="@string/model_guide_option_sf_free" />

                <TextView
                    style="@style/DialogCardDesc"
                    android:text="@string/model_guide_option_sf_free_desc" />

                <TextView
                    style="@style/DialogCardAction"
                    android:text="@string/model_guide_option_sf_free_action" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Local Model Option Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardLocalModel"
            style="@style/DialogSelectionCard"
            android:checked="false">

            <LinearLayout
                style="@style/DialogCardContent">

                <TextView
                    style="@style/DialogCardTitle"
                    android:text="@string/model_guide_option_local" />

                <TextView
                    style="@style/DialogCardDesc"
                    android:text="@string/model_guide_option_local_desc" />

                <TextView
                    style="@style/DialogCardAction"
                    android:text="@string/model_guide_option_local_action" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Online Model Option Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardOnlineModel"
            style="@style/DialogSelectionCard">

            <LinearLayout
                style="@style/DialogCardContent">

                <TextView
                    style="@style/DialogCardTitle"
                    android:text="@string/model_guide_option_online" />

                <TextView
                    style="@style/DialogCardDesc"
                    android:text="@string/model_guide_option_online_desc" />

                <TextView
                    style="@style/DialogCardAction"
                    android:text="@string/model_guide_option_online_action" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 按钮区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp">

            <!-- Skip Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSkipGuide"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_skip_guide" />

            <!-- Confirm Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirmGuide"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/btn_confirm" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
